{% block menu %}
    <form name="search" action="/search">
        <div class="field has-addons">
            <div class="control">
                <input
                    class="input"
                    type="text"
                    placeholder="Find a recipe"
                    name="query"
                    required
                    value="{{ uri.query('query') }}"
                >
            </div>
            <div class="control">
                <button type="submit" class="button is-info">Search</button>
            </div>
        </div>
    </form>
    <hr>
    <aside class="menu">
        <p class="menu-label">Browse Categories</p>
        <ul class="menu-list">
            <li><a href="/">All Recipes</a></li>
            {% for c in taxonomy.getTaxonomyItemKeys('category') %}
                <li><a href="/category:{{c}}">{{ c|title }}</a></li>
            {% endfor %}
        </ul>
        <p class="menu-label">Browse Tags</p>
        <div>
            {% for t in taxonomy.getTaxonomyItemKeys('tag') %}
                <span class="tag"><a href="/tag:{{t}}">{{ t|title }}</a></span>
            {% endfor %}
        </div>
    </aside>
{% endblock %}
